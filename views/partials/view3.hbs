<div>
    <div class="container-fluid pt-3 ">
        <div class="row text-center w-75 mx-auto">
            <div class="col-4">
                <div class="card">
                    <div class="card-header bg-red">
                        <h4 class="text-light">Lower ranked</h4>
                    </div>
                    <div class="friends card-body mt-0">
                        <ul class="list-unstyled mb-5">
                            {{#each viewThree.friendsRankings.below}}
                            <li {{{this.isLowestFollowee}}} class="top-insta">
                                <img src='{{this.profile_pic_url}}'>
                                <span class='user'>{{this.username}}</span>
                                <span class='ml-2 badge badge-danger my-auto'>{{this.below}}</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-header bg-yellow">
                        <h4 class="text-light">Equally ranked</h4>
                    </div>
                    <div class="friends card-body mt-0">
                        <ul class="list-unstyled mb-5">
                            {{#each viewThree.friendsRankings.equal}}
                            <li class="top-insta">
                                <img src='{{this.profile_pic_url}}'>
                                <span class='user'>{{this.username}}</span>
                                <span class='ml-2 badge badge-warning my-auto'>{{this.equal}}</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-header bg-green">
                        <h4 class="text-light">Higher ranked</h4>
                    </div>
                    <div class="friends card-body mt-0">
                        <ul class="list-unstyled mb-5">
                            {{#each viewThree.friendsRankings.top}}
                            <li {{{this.isHighestFollowee}}} class="top-insta">
                                <img src='{{this.profile_pic_url}}'>
                                <span class='user'>{{this.username}}</span>
                                <span class='ml-2 badge badge-success my-auto'>{{this.top}}</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>